rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Existing rule for registrations
    match /registrations/{document} {
      allow read, write: if request.auth != null;
    }

    // Rule for users collection
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // UPDATED: Staff registration rules - FIXED
    match /staffRegistrations/{document} {
      // Allow authenticated users to create
      allow create: if request.auth != null
        && request.resource.data.name is string
        && request.resource.data.phone is string
        && request.resource.data.email is string
        && request.resource.data.organization is string
        && request.resource.data.designation is string;

      // Allow authenticated users to read (for dashboard)
      allow read: if request.auth != null;

      // Prevent updates or deletes
      allow update, delete: if false;
    }

    // NEW: Program metrics rules
    match /programMetrics/{document} {
      // Allow authenticated users to create
      allow create: if request.auth != null
        && request.resource.data.participantName is string
        && request.resource.data.eventDate is string;

      // Allow authenticated users to read (for dashboard)
      allow read: if request.auth != null;

      // Prevent updates or deletes
      allow update, delete: if false;
    }
  }
}